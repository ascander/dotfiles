# vi: ft=gitconfig
[add "interactive"]
	useBuiltin = false

[alias]
	a = "add"
	c = "commit"
	ca = "commit -a"
	cb = "checkout -b"
	co = "checkout"
	last = "log -1 HEAD"
	lasttag = "describe --abbrev=0"
	ll = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
	p = "push"
	psup = "push --set-upstream"
	uncommit = "reset HEAD~"
	unstage = "reset HEAD --"
	up = "pull --rebase"

[color]
	branch = "auto"
	diff = "auto"
	interactive = "auto"
	pager = true
	status = "auto"
	ui = true

[commit]
	gpgSign = true
	verbose = true

[core]
	pager = "delta --minus-style=\"normal #43242B\" --minus-emph-style=\"normal #C34043\" --plus-style=\"normal #2B3328\" --plus-emph-style=\"syntax #76946A\" --syntax-theme=\"TwoDark\""

[credential]
	helper = "osxkeychain"

[include]
  path = ~/.config/delta/themes.gitconfig
  path = ~/.gitconfig.local

[delta]
  features = tokyonight-moon
	light = false
	navigate = true

[diff]
	colorMoved = "default"

[gpg]
	program = "/usr/local/bin/gpg"

[init]
	defaultBranch = "main"

[interactive]
	diffFilter = "delta --color-only --features=interactive"

[merge]
	conflictstyle = "diff3"

[push]
	default = "simple"

[rerere]
	enabled = true

[tag]
	gpgSign = true

